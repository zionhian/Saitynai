{
  "openapi": "3.0.1",
  "info": {
    "title": "SaitynaiBackend",
    "version": "1.0"
  },
  "paths": {
    "/api/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUserDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUserDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUserDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterUserDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterUserDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterUserDto"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - User already exists or invalid data"
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessfulLoginDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessfulLoginDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessfulLoginDto"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid username or password"
          }
        }
      }
    },
    "/api/accessToken": {
      "post": {
        "tags": [
          "Auth"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessfulLoginDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessfulLoginDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessfulLoginDto"
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity - Invalid or missing refresh token"
          }
        }
      }
    },
    "/api/publishers/{publisherId}/games": {
      "get": {
        "tags": [
          "Games"
        ],
        "parameters": [
          {
            "name": "publisherId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/GameGetDto"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/GameGetDto"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/GameGetDto"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found - Publisher not found"
          }
        }
      },
      "post": {
        "tags": [
          "Games"
        ],
        "parameters": [
          {
            "name": "publisherId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GamePostDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/GamePostDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/GamePostDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/GameGetDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameGetDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameGetDto"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - User is not authorized to create games"
          },
          "404": {
            "description": "Not Found - Publisher not found"
          }
        }
      }
    },
    "/api/publishers/{publisherId}/games/{id}": {
      "get": {
        "tags": [
          "Games"
        ],
        "parameters": [
          {
            "name": "publisherId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/GameGetDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameGetDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameGetDto"
                }
              }
            }
          },
          "404": {
            "description": "Not Found - Game or Publisher not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "GameGetDto": {
        "required": [
          "description",
          "title"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "title": {
            "minLength": 1,
            "type": "string"
          },
          "description": {
            "minLength": 1,
            "type": "string"
          },
          "userOwnsGame": {
            "type": "boolean"
          },
          "publisherUserId": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "/api/publishers/{publisherId}/games/{id}/buy": {
    "post": {
      "tags": [
        "Games"
      ],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int32"
          }
        },
        {
          "name": "publisherId",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Success - Game purchased successfully"
        },
        "400": {
          "description": "Bad Request - Game already owned by the user"
        },
        "404": {
          "description": "Not Found - Game not found"
        }
      }
    }
  },
  "/api/publishers": {
    "post": {
      "tags": [
        "Publishers"
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/PublisherPostDto"
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Created - Publisher created successfully",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PublisherGetDto"
              }
            }
          }
        },
        "400": {
          "description": "Bad Request - User is already a publisher"
        },
        "403": {
          "description": "Forbidden - User is not authorized to create a publisher"
        }
      }
    }
  },
  "/api/publishers/{id}": {
    "put": {
      "tags": [
        "Publishers"
      ],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int32"
          }
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/PublisherPutDto"
            }
          }
        }
      },
      "responses": {
        "204": {
          "description": "No Content - Publisher updated successfully"
        },
        "403": {
          "description": "Forbidden - User is not authorized to update this publisher"
        },
        "404": {
          "description": "Not Found - Publisher not found"
        }
      }
    },
    "delete": {
      "tags": [
        "Publishers"
      ],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int32"
          }
        }
      ],
      "responses": {
        "204": {
          "description": "No Content - Publisher deleted successfully"
        },
        "404": {
          "description": "Not Found - Publisher not found"
        }
      }
    }
  },
  "/api/publishers/{publisherId}/games/{gameId}/reviews": {
    "post": {
      "tags": [
        "Reviews"
      ],
      "parameters": [
        {
          "name": "publisherId",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int32"
          }
        },
        {
          "name": "gameId",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int32"
          }
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ReviewPostDto"
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Created - Review added successfully",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReviewGetDto"
              }
            }
          }
        },
        "403": {
          "description": "Forbidden - User is not authorized to create reviews"
        },
        "404": {
          "description": "Not Found - Game or Publisher not found"
        }
      }
    }
  },
  "/api/publishers/{publisherId}/games/{gameId}/reviews/{id}": {
    "put": {
      "tags": [
        "Reviews"
      ],
      "parameters": [
        {
          "name": "publisherId",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int32"
          }
        },
        {
          "name": "gameId",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int32"
          }
        },
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int32"
          }
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ReviewPutDto"
            }
          }
        }
      },
      "responses": {
        "204": {
          "description": "No Content - Review updated successfully"
        },
        "403": {
          "description": "Forbidden - User is not authorized to update this review"
        },
        "404": {
          "description": "Not Found - Review not found"
        },
        "422": {
          "description": "Unprocessable Entity - Invalid rating value"
        }
      }
    }
  }
}
